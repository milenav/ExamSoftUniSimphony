{% extends 'base.html.twig' %}

    {% block body %}

        <form style="width: 30rem;" action="{{ path('product_author') }}" method="post">
            <div class="form-group">
                <label for="author_name" class="required">Name</label>
                <input name="author[name]" type="text" class="form-control" required="required" placeholder="Enter author name">
            </div>


            <br>

            {{ form_row(form._token) }}

            <div style="width: 30rem;">
                <input type="submit" class="btn btn-primary" value="Create" />
                <a class="btn btn-outline-primary" href="{{ path('gallery_index') }}">Cancel</a>
            </div>

        </form>

        {% block stylesheets %}
            <style>
                form{
                    padding: 144px 0 160px 40px;
                    margin-left: 300px;
                }
                footer {
                    position: absolute;
                    right: 0;
                    bottom: 0;
                    left: 0;
                }
            </style>

        {% endblock %}
    {% endblock %}

