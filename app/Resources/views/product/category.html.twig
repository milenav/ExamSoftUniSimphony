{% extends 'base.html.twig' %}

    {% block body %}
        <form style="width: 30rem;" action="{{ path('product_category') }}" method="post">
            <div class="form-group">
                <label for="category_name" class="required">Name</label>
                <input name="category[name]" type="text" class="form-control" id="product_title" required="required" placeholder="Enter category name">
            </div>


            <br>

            {{ form_row(form._token) }}

            <div style="width: 30rem;">
                <input type="submit" class="btn btn-primary" value="Create" />
                <a class="btn btn-outline-primary" href="{{ path('gallery_index') }}">Cancel</a>
            </div>

        </form>

        {% block stylesheets %}
            <style>
                form{
                    padding: 144px 40px 160px 40px;
                    margin-left: 300px;
                }
            </style>

        {% endblock %}
    {% endblock %}

