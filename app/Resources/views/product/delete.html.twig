{% extends 'base.html.twig' %}

{% block body %}

    <form style="width: 30rem;" enctype="multipart/form-data" action="{{ path('product_delete', {'id': product.id}) }}" method="post">
        <div class="form-group">
            <label for="product_title" class="required">Title</label>
            <input name="product[title]" value="{{ product.title }}" type="text" class="form-control" id="product_title" placeholder="Enter title" disabled>
        </div>

        <div class="form-group">
            <label for="product_category" class="required">Category</label>

            <select name="product[category]" id="product_category" class="form-control" readonly="readonly">
                {% for category in categories %}
                    <option value="{{ category.id }}">{{ category.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label for="product_author" class="required">Author</label>

            <select name="product[author]" id="product_author" class="form-control" readonly="readonly">
                {% for author in authors %}
                    <option value="{{ author.id }}">{{ author.name }}</option>
                {% endfor %}

            </select>
        </div>

        <div class="form-group">
            <label for="product_note" class="required">Note</label>
            <textarea name="product[note]" type="text" class="form-control" id="product_note" required="required" placeholder="Enter note" disabled>{{ product.note }}</textarea>
        </div>

        <div class="form-group">
            <label for="product_size" class="required">Size</label>
            <input name="product[size]" value="{{ product.size }}" type="text" class="form-control" id="product_size" required="required" placeholder="Enter size" disabled>
        </div>

        <div class="form-group">
            <label for="product_material" class="required">Material</label>
            <input name="product[material]" value="{{ product.material }}" type="text" class="form-control" id="product_material" required="required" placeholder="Enter material" disabled>
        </div>

        <div class="form-group">
            <label for="product_price" class="required">Price</label>
            <input name="product[price]" value="{{ product.price }}" type="number" class="form-control" id="product_price" required="required" placeholder="Enter price" disabled>
        </div>

        <div class="form-group">
            <label for="product_picture" class="required">Image</label>
            <input name="product[picture]" value="{{ product.picture }}" type="text" class="form-control" id="product_picture" required="required" placeholder="Enter image URL" disabled>
        </div>
        <br>


        {{ form_row(form._token) }}

        <div style="width: 30rem;">
            <input type="submit" class="btn btn-outline-danger" value="Delete" />
            <a class="btn btn-outline-secondary" href="{{ path('product_show', {'id': product.id}) }}">Cancel</a>
        </div>

    </form>

    {% block stylesheets %}
        <style>
            form{
                padding: 80px 0 100px 10px;
            }
        </style>

    {% endblock %}
{% endblock %}