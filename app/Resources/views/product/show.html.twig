{% extends 'base.html.twig' %}

{% block body %}
    <br>
    <br>
    <br>
    {% if app.user %}

    <div class="card" style="width: 30rem;">
        <img src="{{ product.picture }}" width="500" height="325" class="card-img-top" alt="">
    </div>
        <div class="card" style="width: 30rem;">
        <input type="hidden" value="{{ product.id }}">
        <div class="card-body">
            <h3 class="card-title">{{ product.title }}</h3>
            <h5 class="card-title">From {{ product.author }}</h5>
            <p class="card-text">{{ product.note }}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Category: {{ product.category }}</li>
            <li class="list-group-item">Material: {{ product.material }}</li>
            <li class="list-group-item">Size: {{ product.size }}</li>
            <li class="list-group-item">Price: {{ product.price }}</li>
        </ul>
        <div class="card-body">
            <a href="{{ path('product_index') }}" class="card-link">Back to the gallery</a>
            {% if app.getUser() and (app.getUser().isAuthor(product) or app.getUser().isAdmin()) %}
            <a href="{{ path('product_edit', {'id': product.id}) }}" class="card-link">Edit</a>
            <a href="{{ path('product_delete', {'id' :product.id}) }}" class="card-link">Delete</a>
            {% endif %}
        </div>
    </div>
{% endif %}
    <br>
    <br>
    <br>

{% endblock %}
