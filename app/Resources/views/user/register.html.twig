{% extends'base.html.twig' %}

{% block body %}

    <form name="register" action="{{ path('user_register') }}" method="post">
        <div class="form-group">
            <label for="exampleInputUsername">User name</label>
            <input name="user[username]" type="text" class="form-control" id="exampleInputUsername" placeholder="Enter username">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input name="user[password]" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input name="user[email]" type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="exampleInputFullname">Full name</label>
            <input name="user[fullName]" type="text" class="form-control" id="exampleInputFullname" placeholder="Enter full name">
        </div>
        <div class="form-group">
            <label for="exampleInputUsername">City</label>
            <input name="user[city]" type="text" class="form-control" id="exampleInputCity" placeholder="Enter city">
        </div>
        <div class="form-group">
            <label for="exampleInputAddress">Address</label>
            <input name="user[address]" type="text" class="form-control" id="exampleInputAddress" placeholder="Enter address">
        </div>
        <div class="form-group">
            <label for="exampleInputPhone">Phone</label>
            <input name="user[phone]" type="text" class="form-control" id="exampleInputPhone" placeholder="Enter phone">
        </div>
        <div>
            <input name="_csrf_token" type="hidden" value="{{ csrf_token('register') }}">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>

{% endblock %}