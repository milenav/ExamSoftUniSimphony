{% extends'base.html.twig' %}

{% block body %}

    <form name="authenticate" action="{{ path('security_login') }}" method="post" xmlns="http://www.w3.org/1999/html">
        <div class="form-group">
            <label for="exampleInputUsername">User name</label>
            <input name="_username" type="text" class="form-control" id="exampleInputUsername" placeholder="Enter user name">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input name="_password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>
        <input type="hidden" name="_target_path" value="{{ path('user_profile') }}" />
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

{% endblock %}